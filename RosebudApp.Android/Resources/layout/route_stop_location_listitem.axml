<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical"
    android:padding="15dp">
    <TextView
        android:id="@+id/lbl_route_short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="7dp"
        style="?android:attr/textAppearanceLarge"
        tools:text="RTE"
        android:elevation="6dp"
        android:background="@color/default_item_color"
        android:textColor="#ffffff"
        android:minWidth="65dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/lbl_route_long_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            style="@android:style/TextAppearance.Medium"
            tools:text="Route name" />
        <TextView
            android:id="@+id/lbl_route_closest_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:singleLine="true"
            android:ellipsize="end"
            style="@android:style/TextAppearance.Small"
            tools:visibility="visible"
            tools:text="Stop name" />
        <TextView
            android:id="@+id/lbl_route_closest_stop_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            style="@android:style/TextAppearance.Small"
            tools:visibility="visible"
            tools:text="2 km away" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_next_departure"
            style="@android:style/TextAppearance.Small" />
        <ProgressBar
            android:id="@+id/progress_time_route"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminate="true"
            tools:visibility="gone" />
        <TextView
            android:id="@+id/lbl_route_time_next_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="@android:style/TextAppearance.Large"
            tools:text="XX min"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>